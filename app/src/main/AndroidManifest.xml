<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studenttutormatchapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentTutorMatchApp">
        <activity android:name=".view.MonitorDashboardActivity"></activity>
        <activity android:name=".view.ContractFormActivity" />
        <activity android:name=".view.MakeOfferFormActivity" />
        <activity android:name=".view.FindBidsActivity" />
        <activity android:name=".view.ListOffersActivity" />
        <activity android:name=".view.MessageListActivity" />
        <activity android:name=".view.ChatActivity" />
        <activity android:name=".view.DashboardActivity" />
        <activity android:name=".view.BidFormActivity" />
        <activity android:name=".view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.FIT3077.API_KEY"
            android:value="${FIT3077_API_KEY}" />
    </application>

</manifest>